try
    %set up serial
    s = serial('/dev/tty.usbmodem14401')
    set(s,'BaudRate',115200)
    fopen(s)
    %pause(2)
    
    %open image
    MapImage = imread('Scale_Load.jpg');
    imshow(MapImage)
    hold on;
    
    %pixel to inch calibration
    %click 0" line then +1" line
    [xscale1,yscale1] = ginput(1)
    plot(xscale1,yscale1,'g+')
    [xscale2,yscale2] = ginput(1)
    plot(xscale2,yscale2,'g+')
    ppi = xscale2 - xscale1
    zero = xscale1
    
    for i = 1:1
    
    
    
    
    %click on scale to acquire point to move
    [xpos,ypos] = ginput(1)
    
    %scale point to vector from 0
    xmove = xpos - zero
    xmove = xmove/ppi
    
    %limit movement to +2"
    if(xmove > 2)
        xmove = 2
    end
    
    %limit movement to -2"
    if(xmove < -2)
        xmove = -2
    end
    
    CNCMotion = ['G1 x', num2str(xmove),'F10']
    
    
    
    
    fclose(s)
catch ME
    fclose(s)
    ME.message
end